                                                                }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Sem, "", new { @class = "text-danger" })
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 mx-auto text-center">
                        <fieldset>

                            <div class="form-group">

                                @Html.DropDownList("Section", new List<SelectListItem>{
                                                    new SelectListItem { Text = "A", Value = "A", Selected = true},
                                                    new SelectListItem { Text = "B", Value = "B" },
                                                    new SelectListItem { Text = "C", Value = "C" },
                                                    }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Section, "", new { @class = "text-danger" })

                            </div>

                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class=" col-lg-4 mx-auto text-center">

                        <div class=" form-group">
                            @Html.TextBoxFor(model => model.Date, "{dd/MM/yyyy}", new { @class = "form-control", name = "date", id = "datepicker", placeholder = "DATE : DD/MM/YYYY" })
                        </div>

                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 mx-auto text-center">
                        <fieldset>

                            <div class="form-group">
                                @Html.DropDownList("Slot", new List<SelectListItem>{
