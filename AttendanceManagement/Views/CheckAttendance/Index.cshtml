<body id="page-top">
    @using (Html.BeginForm("Index", "CheckAttendance"))
    {
        @Html.AntiForgeryToken()
        <!-- Navigation -->


        <!-- Header -->


        <header class="d-flex">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="container text-center my-auto">
                <br>
                <br>
                <br>
                <div class="row">
                    <div class="col-lg-12 mx-auto">
