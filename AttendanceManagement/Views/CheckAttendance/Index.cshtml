                        </h1>
                    </div>
                </div>
                <br>
                <br>
                <div class="row">
                    <div class="col-lg-4 mx-auto text-center">
                        <fieldset>

                            <div class="form-group">
                                @Html.DropDownList("Department_DID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Department_DID, "", new { @class = "text-danger" })
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 mx-auto text-center">
                        <fieldset>

                            <div class="form-group">

                                @Html.DropDownList("Sem", new List<SelectListItem>{
