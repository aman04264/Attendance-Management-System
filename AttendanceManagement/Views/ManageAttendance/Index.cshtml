@model AttendanceManagement.Models.ManageAttendanceModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TPLayout.cshtml";
}

<h2>Add Attendance</h2>

@using (Html.BeginForm("Index", "ManageAttendance"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Department_DID, "Department_DID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Department_DID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Department_DID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.Sem, "Sem", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Sem", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sem, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Section, "Section", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Section", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Section, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Slot", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Slot", new List<SelectListItem>{
            new SelectListItem { Text = "S1", Value = "S1", Selected = true},
            new SelectListItem { Text = "S2", Value = "S2" },
            new SelectListItem { Text = "S3", Value = "S3" },
            new SelectListItem { Text = "S4", Value = "S4" },
            new SelectListItem { Text = "S5", Value = "S5" },
            new SelectListItem { Text = "S6", Value = "S6" },
            new SelectListItem { Text = "S7", Value = "S7" },
            new SelectListItem { Text = "L1", Value = "L1" },
            new SelectListItem { Text = "L2", Value = "L2" },
            }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Slot, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Get Students" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(function () {
        $('#Date').datetimepicker({
            format: "DD/MM/YYYY"
        }).on('dp.change', function (e) {
            $(this).data('DateTimePicker').hide();
        });
    });

</script>