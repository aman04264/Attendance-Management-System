</head>

<body>

    @using (Html.BeginForm("UploadExcel", "BulkUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {


        <div id="right-panel" class="right-panel">

            <!-- Header-->
            <header id="header" class="header">

                <div class="header-menu">
                    <div class="col-sm-7">

                        <h2 style="text-align: right;">  <img style="width: 7%; margin-right: 3% " src="~/assets/images/logos.png" /> Aikya Software Wing </h2>

                    </div>

                </div>

            </header><!-- /header -->
            <!-- Header-->

          
            <div class="breadcrumbs">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>ADD / Bulk Upload</h1>
                        </div>
                    </div>
                
            </div>
            <div class="content mt-3">
                <div class="animated fadeIn">



                    <div class="col-lg-1"> </div>
                    <div class="col-lg-10 ">
                        <div class="card">
                            <div class="card-header">
                                <strong>Bulk Upload Using Excel File</strong>
                            </div>
                            <div class="card-body card-block form-group">

                                <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">

                                    <div class="row form-group">
                                        <div class="col col-md-3"><label for="file-input" class=" form-control-label">File input</label></div>
                                        <div class="col-12 col-md-9"><input type="file" id="file-input" name="file-input" class="form-control-file"></div>
                                    </div>

                                </form>
                            </div>
                            <div class="card-footer form-group">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Upload 
                                </button>
                            
                            </div>
                        </div>

                        <div class="col-lg-1"></div>



                    </div><!-- .animated -->
                </div><!-- .content -->

            </div><!-- /#right-panel -->
            <!-- Right Panel -->
        </div>
            }


            <script src="~/assets/js/vendor/jquery-2.1.4.min.js"></script>
            <script src="~/assets/js/popper.min.js"></script>
            <script src="~/assets/js/plugins.js"></script>
            <script src="~/assets/js/main.js"></script>

    </body>
</html>
