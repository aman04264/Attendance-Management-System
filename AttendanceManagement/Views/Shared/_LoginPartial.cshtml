@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">


                <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link js-scroll-trigger"><i class="menu-icon ti-key"></i>Log off</a>
            </li>
        </ul>


    }
}
else
{
    <ul class="nav-item">

        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link js-scroll-trigger" })</li>


    </ul>
}
